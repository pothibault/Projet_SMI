/* USER CODE BEGIN Header_StartBlinkGreenTask */
/**
  * @brief  Function implementing the blinkGreenTask thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_StartBlinkGreenTask */
void StartBlinkGreenTask(void *argument)
{
  /* USER CODE BEGIN 5 */
	uint8_t countGreen = 0;
  /* Infinite loop */
  for(;;)
  {
	  if (osMutexAcquire(BlinkTurnMutexHandle, osWaitForever) == osOK)
	  {
		  while(countGreen < 5 )
		  {
			  HAL_GPIO_WritePin(GPIOG, GPIO_PIN_13,GPIO_PIN_SET);
			  osDelay(500);
			  HAL_GPIO_WritePin(GPIOG, GPIO_PIN_13,GPIO_PIN_RESET);
			  osDelay(500);
			  countGreen++;
		  }
		  countGreen = 0;
		  osMutexRelease(BlinkTurnMutexHandle);

		  osDelay(100);
	  }
  }
  /* USER CODE END 5 */
}

/* USER CODE BEGIN Header_StartBlinkRedTask */
/**
* @brief Function implementing the blinkRedTask thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartBlinkRedTask */
void StartBlinkRedTask(void *argument)
{
  /* USER CODE BEGIN StartBlinkRedTask */
	uint8_t countRed = 0;
  /* Infinite loop */
  for(;;)
  {
	  if (osMutexAcquire(BlinkTurnMutexHandle, osWaitForever) == osOK)
	  {
		  while(countRed < 10 )
		  {
			  HAL_GPIO_WritePin(GPIOG, GPIO_PIN_14,GPIO_PIN_SET);
			  osDelay(250);
			  HAL_GPIO_WritePin(GPIOG, GPIO_PIN_14,GPIO_PIN_RESET);
			  osDelay(250);
			  countRed++;
		  }
		  countRed = 0;
		  osMutexRelease(BlinkTurnMutexHandle);

		  osDelay(100);
	  }
  }
  /* USER CODE END StartBlinkRedTask */
}

/* USER CODE BEGIN Header_StartSetPWM */
/**
* @brief Function implementing the setPWM thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartSetPWM */
void StartSetPWM(void *argument)
{
  /* USER CODE BEGIN StartSetPWM */
  /* Infinite loop */
	// Start PWM on TIM4 CH1
	    HAL_TIM_PWM_Start(&htim4, TIM_CHANNEL_1);

	    for(;;)
	    {
	    	if (osMutexAcquire(humidityMutexHandle, osWaitForever) == osOK)
	    	{
				uint16_t duty;

				if (humidity < HUMIDITY_THRESHOLD)
				{
					duty = PWM_1V;    // output ≈ 1V
				}
				else
				{
					duty = PWM_2V;    // output ≈ 2V
				}

				TIM4->CCR1 = duty;
				uint32_t arr = TIM4->ARR;


				//TIM4->CCR1 = 65535;
				osMutexRelease(humidityMutexHandle);

				osDelay(200); // update 5 times per second
	    	}
	    }
  /* USER CODE END StartSetPWM */
}

/* USER CODE BEGIN Header_StartReadHumidity */
/**
* @brief Function implementing the readHumidity thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartReadHumidity */
void StartReadHumidity(void *argument)
{
  /* USER CODE BEGIN StartReadHumidity */
  am2320_data_t meas;

  // I2C déjà initialisé par MX_I2C1_Init(), mais on garde l'appel pour compatibilité
  I2C1_init(0, 0);

  for(;;)
  {
	  if (osMutexAcquire(humidityMutexHandle, osWaitForever) == osOK)
	  	  {
			if (am2320_read(&meas)) {

				float humidity_read = meas.humidity_rh;
				float temperature = meas.temperature_c;
				humidity = humidity_read;
				osMutexRelease(humidityMutexHandle);
				osDelay(2000);
			  // TODO : stocker meas.temperature_c et meas.humidity_rh
			  // par exemple dans des variables globales protégées par un mutex,
			  // ou les envoyer dans une queue à une autre tâche qui gère l’affichage.
			}
	  	  }
  }
  /* USER CODE END StartReadHumidity */
}

